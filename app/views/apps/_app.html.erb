<%= content_tag :div, class: 'btn-group' do %>
  <%= link_to ( app.label || 'No label!' ), code_path(app_id: app.id), class: 'btn btn-link' %>


  <div class="btn-group">
    <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
      <%= icon('fa-bars') %>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to icon_text('fa-edit', 'Edit'), edit_app_path(id: app.id) %></li>
      <li><%= link_to icon_text('fa-share-alt', 'Fork'), clone_app_path(id: app.id), 'data-confirm': 'Are you sure that you want to fork this app?' %></li>
      <li role="separator" class="divider"></li>
      <li>
        <%= button_to app_path(app), method: :delete, class: 'dropdown-item',
         'data-confirm': 'Are you sure that you want to delete this app?' do %>
          <%= icon_text('fa-trash-o', 'Delete') %>
        <% end %>
      </li>
    </ul>
  </div>

<% end %>
