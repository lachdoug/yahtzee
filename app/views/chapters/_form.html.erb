<br>
<%= form_for @chapter do |f| %>
<%= content_tag :div, class: 'form-group' do %>
<%= f.label :order %>
<%= f.number_field :order, class: 'form-control' %>
<% end %>
<%= content_tag :div, class: 'form-group' do %>
<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>
<% end %>
<%= content_tag :div, class: 'form-group' do %>
<%= f.label :preface %>
<%= f.text_area :preface, class: 'form-control' %>
<% end %>
<%= content_tag :div, class: 'form-group' do %>
<%= f.submit class: 'btn btn-primary' %>
<% end %>
<% end %>
